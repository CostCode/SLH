<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- NAME -->
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/shoppinglist_name" />
    
    <edu.cmu.cc.android.view.ValidatingEditText 
        android:id="@+id/etShoppingListName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="20dip"
        android:singleLine="true"
        android:inputType="text"/>
    
    <!-- DATE -->
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/shoppinglist_date" />
    
    <TextView
        android:id="@+id/tvShoppingListDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/shoppinglist_date" />
    
    <!-- COMMENT -->
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/shoppinglist_comments" />
    
    <edu.cmu.cc.android.view.ValidatingEditText 
        android:id="@+id/etShoppingListComments"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="20dip"
        android:singleLine="true"
        android:inputType="text"
        android:lines="5" />
    
</LinearLayout>